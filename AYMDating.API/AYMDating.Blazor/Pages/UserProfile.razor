    }

    .main-photo-container {
        position: relative;
        margin-bottom: 1.5rem;
    }

    .photo-box {
        width: 200px;
        height: 200px;
        object-fit: cover;
        border: 3px solid white;
        box-shadow: var(--box-shadow);
        transition: var(--transition);
    }

        .photo-box:hover {
            transform: scale(1.03);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
        }

    .photo-box2 {
